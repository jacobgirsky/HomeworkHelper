<Window x:Class="HomeworkHelper.AddTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeworkHelper"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="AddTask" Height="300" Width="500">
    <Grid>
        <ComboBox Margin="114,73,0,0" Name="TypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="26">
            <ComboBoxItem Content="Quiz"></ComboBoxItem>
            <ComboBoxItem Content="Test"></ComboBoxItem>
            <ComboBoxItem Content="Task"/>
            <ComboBoxItem Content="Paper"></ComboBoxItem>
            <ComboBoxItem Content="Assignment"></ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="NameOfTaskTB" HorizontalAlignment="Left" Height="23" Margin="114,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="54,33,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Type:" HorizontalAlignment="Left" Margin="62,73,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="DueDate:" HorizontalAlignment="Left" Margin="40,116,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="YesRB" Content="Yes" HorizontalAlignment="Left" Margin="331,99,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NoRB" Content="No" HorizontalAlignment="Left" Margin="331,117,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="EndDate:" HorizontalAlignment="Left" Margin="243,30,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="EndDateOfTaskDP" HorizontalAlignment="Left" Margin="326,33,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DueDateOfTaskDP" HorizontalAlignment="Left" Margin="114,118,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label2" Content="Reocurring:" HorizontalAlignment="Left" Margin="256,93,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddTask1" Content="Add Task" HorizontalAlignment="Left" Margin="152,193,0,0" VerticalAlignment="Top" Width="75" Click="AddTaskButton"/>
        <Button x:Name="button" Content="Cancel" HorizontalAlignment="Left" Margin="281,193,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
