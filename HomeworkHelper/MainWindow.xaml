<Window x:Class="HomeworkHelper.loginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeworkHelper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="loginForm" Height="300" Width="400">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="57,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTB" HorizontalAlignment="Left" Height="22" Margin="152,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="61,132,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,1.865"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="102,208,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="newUser" Content="New User" HorizontalAlignment="Left" Margin="231,208,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="1.16,0.364"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="22" Margin="152,136,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
