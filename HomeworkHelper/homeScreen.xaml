<Window x:Class="HomeworkHelper.homeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeworkHelper"
        mc:Ignorable="d"
        Title="student" Height="400" Width="600">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" Margin="0,0,0,0.5">
            <MenuItem Header="Task">
                <MenuItem Header="Add Task">
                </MenuItem>
                <MenuItem Header="Edit Task"/>
                <MenuItem Header="Delete Task"/>
                <MenuItem Header= "View Tasks"/>
            </MenuItem>
            <MenuItem Header="Course">
                <MenuItem Header="Add Course" Click="AddCourse_Click">
                </MenuItem>
                <MenuItem Header="Edit Course"/>
                <MenuItem Header="Delete Course"/>
                <MenuItem Header= "View Courses" Click = "View_CourseClick"/>

            </MenuItem>
            <ListView Height="352" Width="585" Name="lVTask">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Task Name"  Width="150"/>
                        <GridViewColumn Header="Task Type" Width="150"/>
                        <GridViewColumn Header="Duedate" Width="150" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Menu>
    </Grid>

</Window>
